<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" android:padding="10dp">

    <!-- 체크박스 선택 상태 -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="9dp"/>
                    <solid android:color="@color/white"/>
                    <stroke
                        android:width="2dp"
                        android:color="#6842FF"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/checked" android:top="17dp" android:right="10dp" android:bottom="5dp" android:left="5dp" android:width="25dp" android:height="25dp" android:gravity="right">
            </item>
        </layer-list>

    </item>

    <!-- 체크박스 해제 상태 -->
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <corners android:radius="9dp"/>
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <item
            android:drawable="@drawable/unchecked" android:top="17dp" android:right="10dp" android:bottom="5dp" android:left="5dp" android:width="25dp" android:height="25dp" android:gravity="right">
            </item>
        </layer-list>
    </item>

</selector>